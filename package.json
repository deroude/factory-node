{
  "name": "project-factory",
  "version": "0.1.0",
  "description": "An app that builds other apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/deroude/factory-node"
  },
  "author": "Valentin Raduti",
  "license": "Commercial",
  "scripts": {
    "start": "npm run serve",
    "build": "nnpm run build-ts && npm run tslint",
    "serve": "node dist",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "uuid": "^3.3.2",
    "archiver": "^3.0.0",
    "mustache": "^3.0.0",
    "nodegit": "^0.22.2",
    "dotenv": "^6.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-validator": "^5.3.0",
    "lodash": "^4.17.5",
    "lusca": "^1.5.2",
    "mongoose": "^5.3.3",
    "nodemailer": "^4.4.1",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.36",
    "@types/uuid": "^3.4.4",
    "@types/archiver": "^2.1.2",
    "@types/mustache": "^0.8.31",
    "@types/nodegit": "^0.22.3",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^23.3.5",
    "@types/lodash": "^4.14.91",
    "@types/lusca": "^1.5.0",
    "@types/mongodb": "^3.0.5",
    "@types/mongoose": "^5.2.19",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.11.7",
    "@types/nodemailer": "^4.3.4",
    "@types/passport": "^0.4.3",
    "@types/passport-github": "^1.1.3",
    "@types/passport-local": "^1.0.32",
    "@types/request": "^2.47.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "chai": "^4.1.2",
    "jest": "^23.6.0",
    "nodemon": "^1.13.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3.1.3",
    "concurrently": "^4.0.1"
  }
}
